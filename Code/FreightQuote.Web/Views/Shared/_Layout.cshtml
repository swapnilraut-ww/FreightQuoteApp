    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/Content/alerttheme")
</head>
<body class="skin-blue">
    <header class="header">
        <div id="sucessmsg" class="success message" style="display: none">
            <span id="spanmsg" style="font-weight: bold; font-size: 14pt">This is sample </span>
        </div>
        <div id="errormsg" class="error message" style="display: none">
            <span id="spanermsg" style="font-weight: bold"></span>
        </div>
        <a href="@Url.Action("List", "Quote")" class="logo">
            Freight Quote
            <br>
            <span style="font-size: 10px;"></span>
        </a>
        <nav class="navbar navbar-static-top" role="navigation">
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-user"></i>
                            <span>@Session["UserName"]<i class="caret"></i></span>
                        </a>
                        <ul class="dropdown-menu" style="width: 190px;">
                            <!-- Menu Footer-->
                            <li class="user-footer">                               
                                <div class="pull-right">
                                    <a href="@Url.Action("Logout", "Account")" class="btn btn-default btn-flat">Sign out</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <aside class="left-side sidebar-offcanvas">
            <section class="sidebar">
                @{Html.RenderPartial("_LeftMenu");}
            </section>
        </aside>
        <aside class="right-side">
            <section class="content-header">
                <h1>
                    @ViewBag.Title
                    <small></small>
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </aside>
    </div>
    @*<div id="footer" style=""><a href="http://www.palletwms.com/">Pallet WMS - A Triveni Product</a></div>*@
</body>
<script>
    var successMsg = '@TempData["Success"]';
    var errorMsg = '@TempData["Error"]';
    var loginURL = '@Url.Action("Login", "Account")';
    var warauto = '@Url.Action("WarehouseList", "Warehouse")';
    var vendorAuto = '@Url.Action("GetVendorList", "Vendor")';
    var customerAuto = '@Url.Action("CustomerList", "Customer")';
</script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
<script src="~/Scripts/jquery-migrate-1.0.0.js"></script>
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/kendo")
@Scripts.Render("~/bundles/core")

@RenderSection("scripts", required: false)
</html>
